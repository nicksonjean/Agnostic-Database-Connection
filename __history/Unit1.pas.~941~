procedure TForm1.ButSQLiteClick(Sender: TObject);
var
  DBSQLite : TConnection;
  Query: TQueryBuilder;
  SQL: TQuery;
begin
  DBSQLite := TConnection.Create;
  //DBSQLite := TConnectionClass.GetInstance();
  try
    DBSQLite.Driver := SQLITE;
    DBSQLite.Database :=
    {$IFDEF MSWINDOWS}
      ExtractFilePath(ParamStr(0)) + 'DB.SQLITE';
    {$ELSE}
      TPath.Combine(TPath.GetDocumentsPath, 'DB.SQLITE');
    {$ENDIF}

    if not DBSQLite.GetInstance.Connection.Connected then
      DBSQLite.GetInstance.Connection.Connected := True;

    SQL := TQuery.Create;
    try
      SQL := Query.View('SELECT * FROM logradouro');
      SQL.toGrid(GridSQLite);
      SQL.toComboBox(ComboBoxSQLite, 'id', 'nome');
      SQL.toListBox(ListBoxSQLite, 'id', 'nome');
      //ShowMessage(SQL.Query.RecordCount.ToString);
    finally
      SQL.Free;
    end;

  finally
    DBSQLite.Free;
  end;
end;

procedure TForm1.ButUpdateClick(Sender: TObject);
var
  Dados1, Filtros1: TArray;
  Query1: TQueryBuilder;
  SQL1: TQuery;

  Dados2, Filtros2 : TArrayVariant;
  Query2: TQueryBuilder;
  SQL2: TQuery;
begin
    SQL1 := Query1.View('SELECT * FROM app_empresa');
    Dados1 := TArray.Create;
    Dados1.Add('id', SQL1.Query.FieldByName('id').AsString);
    Dados1.Add('tipo_pessoa', SQL1.Query.FieldByName('tipo_pessoa').AsString);
    Dados1.Add('tipo_documento', SQL1.Query.FieldByName('tipo_documento').AsString);
    Dados1.Add('tipo_estabelecimento', SQL1.Query.FieldByName('tipo_estabelecimento').AsString);
    Dados1.Add('regime_tributario', SQL1.Query.FieldByName('regime_tributario').AsString);
    Dados1.Add('documento_cadastral', SQL1.Query.FieldByName('documento_cadastral').AsString);
    Dados1.Add('inscricao_estadual', SQL1.Query.FieldByName('inscricao_estadual').AsString);
    Dados1.Add('inscricao_municipal', SQL1.Query.FieldByName('inscricao_municipal').AsString);
    Dados1.Add('razao_social', SQL1.Query.FieldByName('razao_social').AsString);
    Dados1.Add('nome_fantasia', SQL1.Query.FieldByName('nome_fantasia').AsString);
    Dados1.Add('cnae_principal_id', SQL1.Query.FieldByName('cnae_principal_id').AsString);
    Dados1.Add('arquivo_imagem_url', SQL1.Query.FieldByName('arquivo_imagem_url').AsString);
    Dados1.Add('arquivo_imagem_raw', SQL1.Query.FieldByName('arquivo_imagem_raw').AsString);
    Dados1.Add('endereco', SQL1.Query.FieldByName('endereco').AsString);
    Dados1.Add('contato', SQL1.Query.FieldByName('contato').AsString);
    Dados1.Add('email', SQL1.Query.FieldByName('email').AsString);
    Dados1.Add('sincronizado', SQL1.Query.FieldByName('sincronizado').AsString);
    Dados1.Add('data_insercao', SQL1.Query.FieldByName('data_insercao').AsString);
    Dados1.Add('data_edicao', SQL1.Query.FieldByName('data_edicao').AsString);
    Filtros1 := TArray.Create;
    Filtros1.Clear;
    Showmessage(Query1.Update('app_empresa', Dados1, Filtros1));
end;

procedure TForm1.ButInsertClick(Sender: TObject);
var
  Empresa1 : TArray;
  Query1: TQueryBuilder;
  SQL1: TQuery;

  Empresa2 : TArrayVariant;
  Query2: TQueryBuilder;
  SQL2: TQuery;
begin
    SQL1 := Query1.View('SELECT * FROM app_empresa');
    Empresa1 := TArray.Create;
    Empresa1.Add('id', SQL1.Query.FieldByName('id').AsString);
    Empresa1.Add('tipo_pessoa', SQL1.Query.FieldByName('tipo_pessoa').AsString);
    Empresa1.Add('tipo_documento', SQL1.Query.FieldByName('tipo_documento').AsString);
    Empresa1.Add('tipo_estabelecimento', SQL1.Query.FieldByName('tipo_estabelecimento').AsString);
    Empresa1.Add('regime_tributario', SQL1.Query.FieldByName('regime_tributario').AsString);
    Empresa1.Add('documento_cadastral', SQL1.Query.FieldByName('documento_cadastral').AsString);
    Empresa1.Add('inscricao_estadual', SQL1.Query.FieldByName('inscricao_estadual').AsString);
    Empresa1.Add('inscricao_municipal', SQL1.Query.FieldByName('inscricao_municipal').AsString);
    Empresa1.Add('razao_social', SQL1.Query.FieldByName('razao_social').AsString);
    Empresa1.Add('nome_fantasia', SQL1.Query.FieldByName('nome_fantasia').AsString);
    Empresa1.Add('cnae_principal_id', SQL1.Query.FieldByName('cnae_principal_id').AsString);
    Empresa1.Add('arquivo_imagem_url', SQL1.Query.FieldByName('arquivo_imagem_url').AsString);
    Empresa1.Add('arquivo_imagem_raw', SQL1.Query.FieldByName('arquivo_imagem_raw').AsString);
    Empresa1.Add('endereco', SQL1.Query.FieldByName('endereco').AsString);
    Empresa1.Add('contato', SQL1.Query.FieldByName('contato').AsString);
    Empresa1.Add('email', SQL1.Query.FieldByName('email').AsString);
    Empresa1.Add('sincronizado', SQL1.Query.FieldByName('sincronizado').AsString);
    Empresa1.Add('data_insercao', SQL1.Query.FieldByName('data_insercao').AsString);
    Empresa1.Add('data_edicao', SQL1.Query.FieldByName('data_edicao').AsString);
    Showmessage(Query1.Insert('app_empresa', Empresa1));

    SQL2 := Query2.View('SELECT * FROM app_empresa');
    Empresa2 := TArrayVariant.Create;
    Empresa2.Add('id', SQL2.Query.FieldByName('id').Value);
    Empresa2.Add('tipo_pessoa', SQL2.Query.FieldByName('tipo_pessoa').Value);
    Empresa2.Add('tipo_documento', SQL2.Query.FieldByName('tipo_documento').Value);
    Empresa2.Add('tipo_estabelecimento', SQL2.Query.FieldByName('tipo_estabelecimento').Value);
    Empresa2.Add('regime_tributario', SQL2.Query.FieldByName('regime_tributario').Value);
    Empresa2.Add('documento_cadastral', SQL2.Query.FieldByName('documento_cadastral').Value);
    Empresa2.Add('inscricao_estadual', SQL2.Query.FieldByName('inscricao_estadual').Value);
    Empresa2.Add('inscricao_municipal', SQL2.Query.FieldByName('inscricao_municipal').Value);
    Empresa2.Add('razao_social', SQL2.Query.FieldByName('razao_social').Value);
    Empresa2.Add('nome_fantasia', SQL2.Query.FieldByName('nome_fantasia').Value);
    Empresa2.Add('cnae_principal_id', SQL2.Query.FieldByName('cnae_principal_id').Value);
    Empresa2.Add('arquivo_imagem_url', SQL2.Query.FieldByName('arquivo_imagem_url').Value);
    Empresa2.Add('arquivo_imagem_raw', SQL2.Query.FieldByName('arquivo_imagem_raw').Value);
    Empresa2.Add('endereco', SQL2.Query.FieldByName('endereco').Value);
    Empresa2.Add('contato', SQL2.Query.FieldByName('contato').Value);
    Empresa2.Add('email', SQL2.Query.FieldByName('email').Value);
    Empresa2.Add('sincronizado', SQL2.Query.FieldByName('sincronizado').Value);
    Empresa2.Add('data_insercao', SQL2.Query.FieldByName('data_insercao').Value);
    Empresa2.Add('data_edicao', SQL2.Query.FieldByName('data_edicao').Value);
    Showmessage(Query2.Insert('app_empresa', Empresa2));
end;

procedure TForm1.FormCreate(Sender: TObject);
var
  DB: TConnection;
begin
  DB := TConnection.Create;
  DB.Driver := MYSQL;
  DB.Host := '127.0.0.1';
  DB.Port := 3306;
  DB.Database := 'simapp_dev_000';
  DB.Username := 'root';
  DB.Password := '';

  if not DB.GetInstance.Connection.Connected then
    DB.GetInstance.Connection.Connected := True;
end;

procedure TForm1.ButFirebirdClick(Sender: TObject);
var
  DBFirebird : TConnection;
  Query: TQueryBuilder;
  SQL: TQuery;
begin
  DBFirebird := TConnection.Create;
  //DBFirebird := TConnectionClass.GetInstance();
  try
    DBFirebird.Driver := FIREBIRD;
    DBFirebird.Host := '127.0.0.1';
    DBFirebird.Port := 3050;
    DBFirebird.Database :=
    {$IFDEF MSWINDOWS}
      ExtractFilePath(ParamStr(0)) + 'DB.FDB';
    {$ELSE}
      TPath.Combine(TPath.GetDocumentsPath, 'DB.FDB');
    {$ENDIF}
    DBFirebird.Username := 'SYSDBA';
    DBFirebird.Password := 'masterkey';

    if not DBFirebird.GetInstance.Connection.Connected then
      DBFirebird.GetInstance.Connection.Connected := True;

    SQL := TQuery.Create;
    try
      SQL := Query.View('SELECT * FROM "card_sector"');
      SQL.toGrid(GridFirebird);
      SQL.toComboBox(ComboBoxFirebird, 'id', 'nome');
      SQL.toListBox(ListBoxFirebird, 'id', 'nome');
      //ShowMessage(SQL.Query.RecordCount.ToString);
    finally
      SQL.Free;
    end;

  finally
    DBFirebird.Free;
  end;
end;

