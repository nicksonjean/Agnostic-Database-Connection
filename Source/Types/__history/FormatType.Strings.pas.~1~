unit FormatType.Strings;

interface

uses
  System.SysUtils,
  System.StrUtils,
  System.RegularExpressions
  ;

type
  TFormatStrings = class
  private
    { Private declarations }
    const Symbols = '[-()\"#\/@;:<>{}`+=~|?!@#$%^&*a-zA-Z\s]';
  public
    { Public declarations }
    class function OnlyAlpha(Text: String): String; static;
    class function OnlyValues(Text: String): String; static;
    class function OnlyNumeric(Text: String): String; static;
    class function OnlyAlphaNumeric(Text: String): String; static;
  end;

implementation

{ TFormatStrings }

class function TFormatStrings.OnlyValues(Text: String): String;
begin
  Result := Trim(TRegEx.Replace(Text, Symbols, ''));
end;

class function TFormatStrings.OnlyAlpha(Text: String): String;
begin
  Result := Trim(TRegEx.Replace(Text, '[^\w]', ''));
end;

class function TFormatStrings.OnlyNumeric(Text: String): String;
begin
  Result := Trim(TRegEx.Replace(Text, '[^\d]', ''));
end;

class function TFormatStrings.OnlyAlphaNumeric(Text: String): String;
begin
  Result := Trim(TRegEx.Replace(Text, '[^\d\w]', ''));
end;

end.
